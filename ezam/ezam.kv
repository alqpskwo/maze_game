#:kivy 1.0.9

<PlayerWidget>:
    canvas:
        Color:
            rgb: (0, 1, 0)
        Rectangle:
            size: 10, 10
            pos: (self.x - 5, self.y - 5)

<EnemyWidget>:
    canvas:
        Color:
            rgb: (1, 0, 0)
        Triangle:
            points: (self.x, self.y + 5, self.x - 5, self.y - 5, self.x + 5, self.y - 5)